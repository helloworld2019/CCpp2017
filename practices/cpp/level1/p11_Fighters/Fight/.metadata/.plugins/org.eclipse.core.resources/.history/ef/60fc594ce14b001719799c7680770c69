#include<time.h>
#include<cstdlib>
int myrand(){
	static int seed = 0 ;
	static int i = 0;
	int m = 0;
	if(i==0){
		srand(time(0));
	}
	if(seed>1000000)seed=0;
	seed = seed + rand();
	i++;
	srand(seed);
	while(1){
		int k = rand();
		if(k-m>120||k-m<-120){
			m = k;
			break;
		}
	}
	return m ;
}



