#include"advanced.h"
#include"flight.h"
#include <SFML/System.hpp>
#include<time.h>
#include<stdlib.h>
#include<iostream>
int Flight::control2()
{
		sf::Mutex mutex;

		static sf::Clock clock ;
		if(sprite.getPosition().y<2000){
			int choice = rand()%4;
			switch (choice){
			case 0 :
				sprite.move(0,10);
				y1=y1+10;
				y1=y2;
				break;
			case 1 :
				if(sprite.getPosition().x>200&&sprite.getPosition().x<1000){
					sprite.move(-20,0);
					x1=x1-20;
					x2=x2-20;
				}
				break;
			case 2 :
				if(sprite.getPosition().x>200&&sprite.getPosition().x<1000){
					sprite.move(20,0);
					x1=x1+20;
					x2=x2+20;
				}
				break;
			case 3 :
				return 1 ;
			}
		}
		return 0 ;
}




