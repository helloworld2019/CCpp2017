#include"advanced.h"
#include"flight.h"
#include <SFML/System.hpp>
#include<time.h>
#include<stdlib.h>
#include<iostream>
int Flight::control2()
{
		sf::Mutex mutex;

		static sf::Clock clock ;
		int c = rand()%4;
		int a ;
		if(c==0){
		}
		if(c==1){
			acc += 1;
		}
		if(c==3){
			acc -= 1 ;
		}
		if(c==4)return 1;
		speed = speed + acc;
		if(sprite.getPosition().y<1000&&sprite.getPosition().x<1000&&sprite.getPosition().x>0){
			sprite.move(speed,10);
			y1=y1+20;
			y2=y1;
			x1=x1+speed;
			x2=x1;
		}
		else live = 0;
		return 0 ;
}




