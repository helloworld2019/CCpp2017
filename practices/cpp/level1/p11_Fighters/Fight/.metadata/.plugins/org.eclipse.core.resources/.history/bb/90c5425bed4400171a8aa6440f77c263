#ifndef EXPLOSION_H_
#define EXPLOSION_H_
class Explosion{
public:
	Explosion():x(0),y(0){}
	void settexture(sf::Texture &Global){
		texture = Global;
		sprite.setTexture(texture);
	}
	int time ;
	int x ;
	int y ;
	sf::Sprite sprite ;
	sf::Texture texture ;
};




#endif /* EXPLOSIN_H_ */
