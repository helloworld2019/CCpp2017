#ifndef EXPLOSION_H_
#define EXPLOSION_H_
class Explosion{
public:
	Explosion(sf::Texture &Global):x(0),y(0){
		texture = Global;
		sprite.setTexture(texture);
	}
	sf::Clock clock ;
	int x ;
	int y ;
	sf::Sprite sprite ;
	sf::Texture texture ;
};




#endif /* EXPLOSIN_H_ */
