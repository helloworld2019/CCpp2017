#include"advanced.h"
#include"flight.h"
#include<time.h>
#include<stdlib.h>
#include<iostream>
void Flight::control2()
{
	srand(time(0));
	int choice = rand()%3;
	switch (choice){
	case 0 :
			if(sprite.getPosition().y<666)
			sprite.move(0,1);
			break;
	case 1 :
			if(sprite.getPosition().x<1225)
			sprite.move(1,0);
			break;
	case 2 :
			if(sprite.getPosition().x>0)
			sprite.move(-1,0);
			break;
	case 3 :
		break;
	default:
		break;
	}
	std::cout<<"i am in the control2()"<<std::endl;
}



