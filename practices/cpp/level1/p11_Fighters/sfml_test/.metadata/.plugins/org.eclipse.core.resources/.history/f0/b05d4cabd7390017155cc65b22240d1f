#ifndef FLIGHT_H_
#define FLIGHT_H_
#include <SFML/Graphics.hpp>

class Flight
{
public:
	Flight(const char* filename){
		life = 3 ;
		texture.loadFromFile(filename);
		sprite.setTexture(texture);
	}
	Flight();

	sf::Sprite GetSprite(){
		return sprite ;
	}

	~Flight();
private:
	int life ;
	sf::Texture texture;
	sf::Sprite sprite;
};




#endif /* FLIGHT_H_ */
