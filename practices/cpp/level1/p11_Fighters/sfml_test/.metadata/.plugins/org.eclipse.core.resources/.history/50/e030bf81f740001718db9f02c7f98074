#ifndef BULLET_H_
#define BULLET_H_
#include <SFML/Graphics.hpp>
class bullet
{
public:
	bullet(char a){
		b = 1 ;
	}
	bullet(int a){
		b = 0 ;
	}

	int fly1(){
		sf::Mutex mutex ;
		if(sprite.getPosition().y<1000){
			mutex.lock();
			sprite.move(0,-1);
			mutex.unlock();
			return 1 ;
		}
		else return 0;
	}
	int fly2(){
		sf::Mutex mutex;
		if(sprite.getPosition().y>0){
			mutex.lock();
			sprite.move(0,1);
			mutex.unlock();
			return 1 ;
		}
		else return 0;
	}

	int getb(){
		return b ;
	}
	void set(int x , int y){
			sprite.setPosition(x,y);
	}

	sf::Sprite &getsprite(){
		return sprite;
	}

	sf::Sprite sprite;
	int b ;
};




#endif /* BULLET_H_ */
