#ifndef FLIGHT_H_
#define FLIGHT_H_
#include <SFML/Graphics.hpp>
#include<time.h>
#include<stdlib.h>
class Flight
{
public:
	Flight(const char* filename){
		life = 3 ;
		texture.loadFromFile(filename);
		sprite.setTexture(texture);
		sprite.scale(0.25,0.25);
		sprite.setPosition(500,500);
	}
	Flight(){
		life = 1 ;
		texture.loadFromFile("image.jpg");
		sprite.setTexture(texture);
		srand(time(0));
		int x = rand() % 1200;
		sprite.setPosition(x,0);
	}

	void control();

	void control2();

	sf::Sprite &GetSprite(){
		return sprite ;
	}

	void restore(){
		life++;
	}
	void subtract(){
		life--;
	}

	bool ifdeath(){
		if(life<=0){
			return 0;
		}
		return 1 ;
	}

private:
	int life ;
	sf::Texture texture;
	sf::Sprite sprite;
};




#endif /* FLIGHT_H_ */
